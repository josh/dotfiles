# shellcheck source=/dev/null
source ~/.config/sh/env

abs_dirname() {
	local cwd
	local path
	cwd="$(pwd)"
	path="$1"

	while [ -n "$path" ]; do
		cd "${path%/*}" || return
		local name="${path##*/}"
		path="$(readlink "$name")"
	done

	pwd
	cd "$cwd" || return
}

config_bash_dir="$(abs_dirname "${BASH_SOURCE[0]}")"
config_dir="$(abs_dirname "$config_bash_dir")"
DOTFILES="$(abs_dirname "$config_dir")"
export DOTFILES
