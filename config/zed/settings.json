{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "inlay_hints": {
    "enabled": true
  },
  "collaboration_panel": {
    "button": false
  },
  "terminal": {
    "option_as_meta": true
  },
  "languages": {
    "Nix": {
      "formatter": {
        "external": {
          "command": "nix",
          "arguments": ["fmt", "--", "--stdin", "{buffer_path}"]
        }
      }
    }
  },
  "lsp": {}
}
