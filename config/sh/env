# set en_US locale w/ utf-8 encodings
LANG="en_US.UTF-8"
LANGUAGE="en"
LC_CTYPE="en_US.UTF-8"
LC_ALL="en_US.UTF-8"
export LANG LANGUAGE LC_CTYPE LC_ALL

# paths
PATH="/usr/bin:/bin:/usr/sbin:/sbin"

if [ -d "/usr/local" ]; then
	PATH="/usr/local/bin:/usr/local/sbin:$PATH"
fi

if [ -d "$HOME/.local/bin" ]; then
	PATH="$HOME/.local/bin:$PATH"
fi

# editor/pager
if [ -x "$(command -v bbedit)" ]; then
	EDITOR="bbedit"
else
	EDITOR="vim"
fi
PAGER="less -R"
LESSHISTFILE="-"
export EDITOR PAGER LESSHISTFILE

# colors
CLICOLOR=1
GREP_COLOR='1;32'
export CLICOLOR GREP_COLOR

if [ -d "$HOME/Library/Mobile Documents/com~apple~CloudDocs" ]; then
	# shellcheck disable=SC2034
	ICLOUD="$HOME/Library/Mobile Documents/com~apple~CloudDocs"
fi

if [ -d "/opt/homebrew/var/restic" ]; then
	RESTIC_REPOSITORY="/opt/homebrew/var/restic"
	export RESTIC_REPOSITORY
fi
if [ -f "$HOME/.config/restic/password" ]; then
	RESTIC_PASSWORD_FILE="$HOME/.config/restic/password"
	export RESTIC_PASSWORD_FILE
fi

# shellcheck source=config/sh/xdg
. ~/.config/sh/xdg
