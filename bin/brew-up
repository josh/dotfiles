#!/bin/sh

set -ex

if [ ! -x /usr/local/bin/brew ]; then
  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

git-fetch-dir /usr/local/Homebrew
brew bundle check --global || brew bundle --global
brew update
brew upgrade
mas upgrade
brew cleanup
brew cask cleanup
brew prune
