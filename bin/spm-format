#!/bin/bash

set -euf -o pipefail

if [ -f .swiftformat ]; then
	echo "swiftformat ." >&2
	swiftformat .
fi

if [ -f .swift-format ]; then
	echo "swift-format format -ir ." >&2
	swift-format format --in-place --recursive .
fi

if [ -f .swiftformat ]; then
	echo "swiftformat --lint ." >&2
	swiftformat --lint .
fi

if [ -f .swiftlint.yml ]; then
	echo "swiftlint lint --quiet ." >&2
	swiftlint lint --quiet .
fi
