#!/bin/bash

shopt -s extglob
set -ex

abs_dirname() {
	local cwd
	local path
	local name

	cwd="$(pwd)"
	path="$1"

	while [ -n "$path" ]; do
		cd "${path%/*}"
		name="${path##*/}"
		path="$(readlink "$name")"
	done

	pwd
	cd "$cwd"
}

bin="$(abs_dirname "$0")"
dotfiles="$(abs_dirname "$bin")"

for src in "$dotfiles"/!(install.sh); do
	ln -nfs "$src" "$HOME/.$(basename "$src")"
done

if [ -d "$HOME/Library/Caches" ]; then
	ln -nfs "$HOME/Library/Caches" "$HOME/.cache"
fi

pushd "$dotfiles" >/dev/null

[ ! -f ssh/id_ed25519 ] || chmod 600 ssh/id_ed25519
[ ! -f ssh/id_ed25519.pub ] || chmod 644 ssh/id_ed25519.pub

[ ! -f ssh/id_rsa ] || chmod 600 ssh/id_rsa
[ ! -f ssh/id_rsa.pub ] || chmod 644 ssh/id_rsa.pub
