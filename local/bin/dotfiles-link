#!/bin/bash

set -euo pipefail

realpath="$(readlink -f "$0")"
bin="$(dirname "$realpath")"
local="$(dirname "$bin")"
dotfiles="$(dirname "$local")"

dotlink() {
	src="$dotfiles/$1"
	dst="$HOME/.$1"
	if [ ! -L "$dst" ]; then
		echo ln -nfs "$src" "$dst"
		ln -nfs "$src" "$dst"
	fi
}

check_link() {
	if [ -L "$1" ] && ! [ -e "$1" ]; then
		echo "rm $1"
		rm "$fn"
	fi
}

mkdir -p "$HOME/.config"
mkdir -p "$HOME/.local"

dotlink "bash_profile"
dotlink "bashrc"
dotlink "local/bin"
dotlink "ssh"
dotlink "zprofile"
dotlink "zshrc"

for src in "$dotfiles/config"/*; do
	dotlink "config/$(basename "$src")"
done

for fn in "$HOME"/*; do
	check_link "$fn"
done

for fn in "$HOME/.config"/*; do
	check_link "$fn"
done
