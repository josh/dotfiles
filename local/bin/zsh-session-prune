#!/bin/bash

set -euo pipefail
shopt -s nullglob

sessions=("$HOME/.zsh_sessions"/*.history)
[ "${#sessions[@]}" -eq 0 ] && exit 0

set -x

zsh-history-merge "$HOME/.zsh_history" "$HOME/.zsh_sessions"/*.history >/tmp/zsh_history
cp /tmp/zsh_history "$HOME/.zsh_history"
rm "$HOME/.zsh_sessions"/*.history "$HOME/.zsh_sessions"/*.session /tmp/zsh_history
