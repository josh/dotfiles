#!/bin/bash

set -euo pipefail

models=(
	"codegemma:7b"
	"codestral:22b"
	"gemma2:9b"
	"gemma2:27b"
	"llama3:8b"
	"llama3:70b"
	"mistral:7b"
	"phi3:3b"
	"phi3:14b"
)

_models() {
	for element in "${models[@]}"; do
		echo "$element"
	done | sort
}

_installed() {
	ollama list | awk 'NR>1 {print $1}' | sort
}

comm -23 <(_models) <(_installed) | while read -r model; do
	echo "+" ollama pull "$model"
	ollama pull "$model"
done

comm -13 <(_models) <(_installed) | while read -r model; do
	echo "+" ollama rm "$model"
	ollama rm "$model"
done
